<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bgnd_dark"
        android:elevation="4dp"
        style="@style/AppTheme"
        app:title="@string/title_activity_profile"
        app:titleTextColor="@color/whiteText"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

        <fragment
            android:id="@+id/frag_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/profile_toolbar"
            android:name="in.ac.bits_hyderabad.swd.swd.user.fragment.User_ProfileFragment"
            tools:layout="@layout/fragment_user_profile">

        </fragment>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_update_details"
        android:backgroundTint="@color/colorPrimaryLight"
        android:elevation="5dp"
        />

</RelativeLayout>