<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/custom_style</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/back_btn</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
    </style>

    <style name="logo">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">@dimen/top</item>
    </style>

    <style name="docs_header">

        <item name="android:padding">@dimen/top</item>
        <item name="android:color">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="heading">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/top</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="login_input_layout">
        <item name="android:textColorHint">#c1cdc1</item>
        <item name="passwordToggleTint">#FFFFFF</item>

    </style>

    <style name="admin_input_layout">
        <item name="android:textColorHint">#000000</item>
        <item name="passwordToggleTint">#000000</item>

    </style>

    <style name="login_names">
        <item name="android:layout_marginTop">@dimen/top</item>
        <item name="android:layout_marginLeft">@dimen/left</item>
        <item name="android:layout_marginRight">@dimen/right</item>
        <item name="android:textSize">@dimen/text</item>

    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">#000</item>
    </style>

    <style name="background_img">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="button_login">
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="button_admin_doc">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
    </style>
    <style name="custom_style" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@drawable/bgnd</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

</resources>
